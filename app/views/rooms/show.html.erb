<% @user_rooms.each do |ur| %>
  <% if ur.user != current_user %>
    <h2><%= ur.user.name %>さんとのチャット</h2>
  <% end %>
<% end %>

<!--チャット内容-->
<% if @chats.exists? %>
  <% @chats.each do |chat| %>
    <%= chat.message %>
  <% end %>
<% end %>

<!--チャット入力欄-->
<%= form_with model: @chat do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit "送信" %>
<% end %>